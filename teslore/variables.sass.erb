//	Color Palette
$black:			#161616
$black-desat:	#545454
$blue:			#0055DF
$blue-light:	#66B5FF
$brown:			#70381A
$gold:			#9A7D2E
$green:			#156915
$grey:			#C7C7C7
$mod-red:		#AD1200
$orange:		#FF4500
$parchment:		#E9DDC0
$red:			#A72A2A
$red-desat:		#7F1F1F
$white:			#F0F0F0

//	Font Kit
$code-set:			"Inconsolata", "Consolas", "Lucida Console", "Courier New", monospace
$sans-serif-set:	"Roboto", "Segoe UI", "Helvetica Neue", "Helvetica", "Verdana", sans-serif
$serif-set:			"Georgia", "Garamond", "Constantia", "Book Antiqua", "Palatino Linotype", "Goudy Old Style", serif

//	Custom Fonts: USE WITH A STANDARD SET FOLLOWING THEM
$daedric-set:		"Oblivion", "Daedric"
$dovah-set:			"Dragon_script"
$dwemer-set:		"Dwemer"
$falmer-set:		"Falmer"
$mage-set:			"Mage Script"

//	Textures Used
$banner:		url(%%Celebration%%)
$banner-pos:	top left
$calendar:		url(%%Cal4E204%%)
$FlairSheet:	url(%%FlairStandard%%)
$flag:			url(%%Flag%%)
$flag-overlay:	url(%%flag-covers%%)
$spritesheet:	url(%%spritesheet%%)
$texture:		url(%%DarkTex%%)
$T0:			url(%%pixel-of-RES%%)
$T1:			url(%%pixel-of-darkness%%)
$T2:			url(%%pixel-of-truth%%)
$T3:			url(%%pixel-of-valor%%)
$T4:			url(%%pixel-of-light%%)

$snoo:				url(%%Snoo%%)
$snoo-height:		94px
$snoo-width:		90px
$snoo-offset:		0 - 8px	//	Varies with Image. -8px for the glow space
$snoo-x-1:			0
$snoo-y-1:			0
$snoo-x-2:			-90px
$snoo-y-2:			0

$teslore:			url(%%teslore%%)
$teslore-height:	29px
$teslore-width:		280px
$teslore-offset:	0
$teslore-x-1:		-280px
$teslore-y-1:		0
$teslore-x-2:		-280px
$teslore-y-2:		-70px

//	Header Image Information
$tabmenu-height:	49px
$banner-height:		175
$header-height:		$banner-height + $tabmenu-height
$notice-height:		53px

//	Wiki Variables
$wiki-size:	13px

//	Versioning Information
$build_version:		"<%= $build[:version] %>"
$build_host:		"<%= $build[:host] %>"
$build_name:		"<%= $build[:name] %>"
$build_time:		"<%= $build[:time] %>"
$build_hash:		"<%= $build[:hash][0...7] %>"
$build_hash_long:	"<%= $build[:hash] %>"
$build_branch:		"<%= $build[:branch] %>"

//	Mixins
=create
	background:
		color:	$black !important
		image:	none !important
	border:
		style:	none
	height:	29px
	width:	300px
	vertical-align:	middle
	div.nub
		display:	none !important
=create-link
	background
		color:	$black
	color:	$white
	font:
		family:	$serif-set !important
		size:	large
		weight:	400
	position:	relative
	text:
		align:	center
		transform:	uppercase
=links
	a
		color:	$red
		&:hover
			text:
				decoration:	underline
		&:visited
			color:	$red-desat
=arrows
	div.arrow
		background:
			image:	$spritesheet
		height:	14px
		width:	15px
		&.up
			background:
				position:	0 0
		&.down
			background:
				position:	-15px 0
			display:	none !important
		&.upmod
			background:
				position:	-30px 0
		&.downmod
			background:
				position:	-45px 0
=expando-buttons
	*.expando-button
		background:
			color:	transparent
			image:	$spritesheet
		margin:	0
		position:	relative
		top:	5px
		&.collapsed,
		&.collapsedExpando
			background:
				position:	0 -15px
			height:	20px
			width:	10px
			&:hover
				background:
					position:	-10px -15px
		&.expanded
			background:
				position:	-20px -15px
			height:	15px
			width:	20px
			&:hover
				background:
					position:	-40px -15px
=userattrs($pos)
	background:
		image:	$spritesheet
		position:	$pos -70px
	bottom:	-10px
	padding:
		top:	28px
		left:	0
		right:	5px
		bottom:	0
	position:	relative
