//  variables
//  Holds globally-used variables such as color nicknames, images, sizing data, font
//  collections, custom functions and Ruby placeholder text.

//  Functions
@import "functions"

//  COLOR PALETTE
//  Monochromes
$black:                 hsla(000.00, 00.00%, 08.63%, 1.0000)
$black-lt:              hsla(000.00, 00.00%, 16.66%, 1.0000)
$grey-25:               hsla(000.00, 00.00%, 25.00%, 1.0000)
$grey-33:               hsla(000.00, 00.00%, 33.33%, 1.0000)
$grey-50:               hsla(000.00, 00.00%, 50.00%, 1.0000)
$grey-66:               hsla(000.00, 00.00%, 66.66%, 1.0000)
$grey-75:               hsla(000.00, 00.00%, 75.00%, 1.0000)
$white-dk:              hsla(000.00, 00.00%, 84.33%, 1.0000)
$white:                 hsla(000.00, 00.00%, 91.40%, 1.0000)
//  Primaries
$red:                   hsla(000.00, 60.00%, 40.00%, 1.0000)
$red-desat:             hsla(000.00, 60.00%, 30.00%, 1.0000)
$red-mod:               hsla(006.25, 90.00%, 33.33%, 1.0000)
$grn:                   hsla(120.00, 80.00%, 20.00%, 1.0000)
$blu:                   hsla(240.00, 80.00%, 33.33%, 1.0000)
$blu-lite:              hsla(209.00, 100.0%, 43.70%, 1.0000)
//  Others
$orange:                hsla(016.20, 100.0%, 50.00%, 1.0000)
$brown:                 hsla(020.90, 62.30%, 27.10%, 1.0000)
$parchment:             hsla(042.40, 48.20%, 83.33%, 1.0000)
$gold:                  hsla(043.90, 54.00%, 39.20%, 1.0000)
//  Semitransparencies
$cover-of-res:          hsla(042.00, 17.00%, 91.00%, 0.8750)
$cover-of-darkness:     hsla(000.00, 00.00%, 20.00%, 0.1490)
$cover-of-truth:        hsla(000.00, 00.00%, 50.00%, 0.2040)
$cover-of-valor:        hsla(032.00, 08.00%, 99.00%, 0.5765)
$cover-of-light:        hsla(000.00, 00.00%, 99.00%, 0.5608)

//  FONTS
$font-base:             12px
//  Common Fonts
$fonts-mono:            "Inconsolata-dz", "Inconsolata", "Consolas", "Courier New", monospace
$fonts-sans:            "Roboto", "Segoe UI", "Helvetica Neue", "Verdana", sans-serif
$fonts-serf:            "Georgia", "Garamond", "Constantia", "Palatino Linotype", serif
//  TES Fonts
$tes-font-daedric:      "Oblivion", "Daedric"
$tes-font-dovah:        "Dragon_script"
$tes-font-dwemer:       "Dwemer"
$tes-font-falmer:       "Falmer"
$tes-font-mage:         "Mage Script"
//  Map
$fonts-TES:             (Daedric, tes-font-daedric), (Dovah, tes-font-dovah), (Dwemer, tes-font-dwemer), (Falmer, tes-font-falmer), (Mage, tes-font-mage)

//  IMAGES
$sprites:               url(%%sprites%%)
$bg-main:               url(%%map%%)
$bg-texture:            url(%%dark-tex%%)

//  Flair
$flair-sheet:           url(%%flair%%)
$flair-height:          30px
$flair-width:           50px

//  Flag
$flag-image:            url(%%flag%%)
$flag-text:             url(%%flag-text%%)
$flag-h:                300px
$flag-w:                300px
$flag-text-x-0:         left
$flag-text-y-0:         -49px
$flag-text-x-1:         left
$flag-text-y-1:         -49px

//  Banner data
//  Ruby reads from .banner and selects a single banner object, which contains the
//  image, position, and height data to be parsed into Sass variables and propagated
//  from here.
//  The banner(s) file to use
$header-banner-img:     url(%%<%= $banner[:image] %>%%)
//  Multiple banners to an image file requires this as a setting.
$header-banner-pos:     <%= $banner[:position] %>
//  Height in pixels of the selected banner. Ideally between 50-150.
$header-banner-h:       <%= $banner[:height] %>
//  Height of subreddit bar
$header-submenu-h:      20px
//  Height of tab menu below banner
$header-tabmenu-h:      49px
$header-sum-h:          $header-submenu-h + $header-banner-h + $header-tabmenu-h
//  Y-value of notification inserts
$header-notice-y:       53px

//  Snoo
$snoo-img:              url(%%snoo%%)
//  Height of a single Snoo sprite
$snoo-h:                94px
//  Width of a single Snoo sprite
$snoo-w:                90px
//  Distance between Snoo's feet and bottom of image file
$snoo-o:                0 - 8px
//  Image coordinates of resting Snoo
$snoo-x-0:              0
$snoo-y-0:              0
//  Image coordinates of active Snoo
$snoo-x-1:              -90px
$snoo-y-1:              0

//  Teslore Logo
$logo-img:              url(%%teslore%%)
//  Height of a single logo sprite
$logo-h:                29px
//  Width of a single logo sprite
$logo-w:                280px
//  Any vertical offset needed
$logo-o:                0
//  Image coordinates of resting logo
$logo-x-0:              -280px
$logo-y-0:              0
//  Image coordinates of active logo
$logo-x-1:              -280px
$logo-y-1:              -70px

//  Versioning Information (processed by Ruby and returned as plaintext)
//  Build number (taken from /.version file)
$build_version:         "<%= $build[:version] %>"
//  Machine which compiled current document
$build_host:            "<%= $build[:host] %>"
//  Build name (taken from /.version file)
$build_name:            "<%= $build[:name] %>"
//  Time of compilation
$build_time:            "<%= $build[:time] %>"
//  Current Git commit hash (7 chars)
$build_hash:            "<%= $build[:hash][0...7] %>"
//  Current Git commit hash (40 chars)
$build_hash_long:       "<%= $build[:hash] %>"
//  Current Git branch
$build_branch:          "<%= $build[:branch] %>"
