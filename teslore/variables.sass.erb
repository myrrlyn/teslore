//	Color Palette
$black:			hsl(000.0, 000.0%, 08.6%)
$black-desat:	hsl(000.0, 000.0%, 33.3%)
$blue:			hsl(217.1, 100.0%, 43.7%)
$blue-light:	hsl(209.0, 100.0%, 70.0%)
$brown:			hsl(020.9, 062.3%, 27.1%)
$gold:			hsl(043.9, 054.0%, 39.2%)
$green:			hsl(120.0, 066.7%, 25.0%)
$grey:			hsl(000.0, 000.0%, 75.0%)
$mod-red:		hsl(006.2, 100.0%, 33.3%)
$orange:		hsl(016.2, 100.0%, 50.0%)
$parchment:		hsl(042.4, 048.2%, 83.3%)
$red:			hsl(000.0, 060.0%, 41.0%)
$red-desat:		hsl(000.0, 060.0%, 31.0%)
$white:			hsl(000.0, 000.0%, 91.4%)

//	Font Kit
$code-set:			"Inconsolata", "Consolas", "Lucida Console", "Courier New", monospace
$sans-serif-set:	"Roboto", "Segoe UI", "Helvetica Neue", "Helvetica", "Verdana", sans-serif
$serif-set:			"Georgia", "Garamond", "Constantia", "Book Antiqua", "Palatino Linotype", "Goudy Old Style", serif

//	Custom Fonts: USE WITH A STANDARD SET FOLLOWING THEM
$daedric-set:		"Oblivion", "Daedric"
$dovah-set:			"Dragon_script"
$dwemer-set:		"Dwemer"
$falmer-set:		"Falmer"
$mage-set:			"Mage Script"

//	Textures Used
$banner:		url(%%Dragons%%)
$banner-pos:	center top
$calendar:		url(%%Cal4E204%%)
$FlairSheet:	url(%%flair%%)
$flag:			url(%%Flag%%)
$flag-overlay:	url(%%flag-covers%%)
$spritesheet:	url(%%spritesheet%%)
$texture:		url(%%DarkTex%%)
$T0:			hsla(045, 20.00%, 90.00%, 0.8750)
$T1:			hsla(000, 00.00%, 20.00%, 0.3800)
$T2:			hsla(000, 00.00%, 50.00%, 0.2040)
$T3:			hsla(032, 08.00%, 100.0%, 0.5765)
$T4:			hsla(000, 00.00%, 100.0%, 0.5608)

$snoo:				url(%%Snoo%%)
$snoo-height:		94px
$snoo-width:		90px
$snoo-offset:		0 - 8px	//	Varies with Image. -8px for the glow space
$snoo-x-1:			0
$snoo-y-1:			0
$snoo-x-2:			-90px
$snoo-y-2:			0

$teslore:			url(%%teslore%%)
$teslore-height:	29px
$teslore-width:		280px
$teslore-offset:	0
$teslore-x-1:		-280px
$teslore-y-1:		0
$teslore-x-2:		-280px
$teslore-y-2:		-70px

//	Header Image Information
$submenu-height:	20px
$banner-height:		150px
$tabmenu-height:	49px
$header-height:		$submenu-height + $banner-height + $tabmenu-height
$notice-height:		53px

//	Wiki Variables
$wiki-size:	13px

//	Versioning Information
$build_version:		"<%= $build[:version] %>"
$build_host:		"<%= $build[:host] %>"
$build_name:		"<%= $build[:name] %>"
$build_time:		"<%= $build[:time] %>"
$build_hash:		"<%= $build[:hash][0...7] %>"
$build_hash_long:	"<%= $build[:hash] %>"
$build_branch:		"<%= $build[:branch] %>"

//	Mixins
=create
	background:
		color:	$black !important
		image:	none !important
	border:
		style:	none
	height:	29px
	width:	300px
	vertical-align:	middle
	div.nub
		display:	none !important
=create-link
	background
		color:	$black
	color:	$white
	font:
		family:	$serif-set !important
		size:	large
		weight:	400
	position:	relative
	text:
		align:	center
		transform:	uppercase
=links
	a
		color:	$red
		&:hover
			text:
				decoration:	underline
		&:visited
			color:	$red-desat
=arrows
	div.arrow
		background:
			image:	$spritesheet
		height:	14px
		width:	15px
		&.up
			background:
				position:	0 0
		&.down
			background:
				position:	-15px 0
			display:	none !important
		&.upmod
			background:
				position:	-30px 0
		&.downmod
			background:
				position:	-45px 0
=expando-buttons
	*.expando-button
		background:
			color:	transparent
			image:	$spritesheet
		margin:	0
		position:	relative
		top:	5px
		&.collapsed,
		&.collapsedExpando
			background:
				position:	0 -15px
			height:	20px
			width:	10px
			&:hover
				background:
					position:	-10px -15px
		&.expanded
			background:
				position:	-20px -15px
			height:	15px
			width:	20px
			&:hover
				background:
					position:	-40px -15px
=userattrs($pos)
	background:
		image:	$spritesheet
		position:	$pos -70px
	bottom:	-10px
	padding:
		top:	28px
		left:	0
		right:	5px
		bottom:	0
	position:	relative
